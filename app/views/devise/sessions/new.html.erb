<head> 
<%= stylesheet_link_tag "login", "data-turbo-track": "reload" %>
</head>
<div class="mainContainer">
        <nav class="navbar navbar-expand-lg bg-danger d-flex">
            <div class="container-fluid justify-content-center">
                <%= image_tag("logoOxxo.png", width: "10%") %>
                <h2 class="text-white fw-bold px-4">Administración</h2>
            </div>
        </nav>
 <div class="container formContainer">
            <h3 class="fw-bold mb-4 justify-content-center d-flex">Inicia sesión</h3>
            <div class="container justify-content-center d-flex">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "justify-content-center"}, data:{controller: "login"}) do |f| %>
  <div class="inputs mb-3">
    <div class="row mb-3">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

    <div class="inputs mb-3">
        <div class="row mb-3">
    <%= f.label :password, "Contraseña", class: "form-label"%><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
    </div>

 <div class="row mb-3">
    <%= f.submit "Iniciar sesión", class: "btn btn-primary mt-3 mb-4 d-flex justify-content-center", id: "login" %>
  </div>
    <%= link_to "Regístrate", new_registration_path(resource_name),  class: " d-flex justify-content-center" %>
<% end %>


    </div>

        </div>
    </div>
